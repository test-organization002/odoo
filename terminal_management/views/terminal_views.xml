<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Terminal Tree View -->
    <record id="view_terminal_tree" model="ir.ui.view">
        <field name="name">terminal.management.tree</field>
        <field name="model">terminal.management</field>
        <field name="arch" type="xml">
            <tree string="Terminal Listesi" decoration-info="terminal_durum == 'beklemede'" decoration-success="terminal_durum == 'aktif'" decoration-danger="terminal_durum == 'ariza'">
                <field name="mali_no"/>
                <field name="banka_adi"/>
                <field name="terminal_durum" widget="badge" decoration-info="terminal_durum == 'beklemede'" decoration-success="terminal_durum == 'aktif'" decoration-danger="terminal_durum == 'ariza'"/>
                <field name="pos_durum" widget="badge" decoration-info="pos_durum == 'beklemede'" decoration-success="pos_durum == 'aktif'" decoration-danger="pos_durum == 'ariza'"/>
                <field name="banka_durum" widget="badge" decoration-info="banka_durum == 'beklemede'" decoration-success="banka_durum == 'aktif'" decoration-danger="banka_durum == 'pasif'"/>
                <field name="marka"/>
                <field name="model"/>
                <field name="son_haberlesme"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>

    <!-- Terminal Form View -->
    <record id="view_terminal_form" model="ir.ui.view">
        <field name="name">terminal.management.form</field>
        <field name="model">terminal.management</field>
        <field name="arch" type="xml">
            <form string="Terminal">
                <header>
                    <button name="action_aktif_et" string="Aktif Et" type="object" class="oe_highlight" attrs="{'invisible': [('terminal_durum', '=', 'aktif')]}"/>
                    <button name="action_pasif_et" string="Pasif Et" type="object" attrs="{'invisible': [('terminal_durum', '=', 'pasif')]}"/>
                    <button name="action_ariza_bildir" string="Arıza Bildir" type="object" attrs="{'invisible': [('terminal_durum', '=', 'ariza')]}"/>
                    <field name="terminal_durum" widget="statusbar" statusbar_visible="aktif,beklemede,ariza"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="mali_no" placeholder="Mali No"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Temel Bilgiler">
                            <field name="org_id"/>
                            <field name="banka_adi"/>
                            <field name="marka"/>
                            <field name="model"/>
                            <field name="terminal_type"/>
                        </group>
                        <group string="Durum Bilgileri">
                            <field name="banka_durum"/>
                            <field name="pos_durum"/>
                            <field name="satis_durum"/>
                            <field name="terminal_kanali"/>
                        </group>
                    </group>
                    <group>
                        <group string="Teknik Bilgiler">
                            <field name="sim_id"/>
                            <field name="imei"/>
                            <field name="operator"/>
                            <field name="son_haberlesme"/>
                        </group>
                        <group string="Banka Bilgileri">
                            <field name="banka_mid"/>
                            <field name="banka_tid"/>
                            <field name="pos_mid"/>
                            <field name="pos_tid"/>
                        </group>
                    </group>
                    <group>
                        <group string="Tarih Bilgileri">
                            <field name="satis_aktivasyon_tarihi"/>
                            <field name="banka_gonderim_tarihi"/>
                            <field name="banka_yanit_tarihi"/>
                        </group>
                        <group string="İptal Tarihleri">
                            <field name="satis_iptal_tarihi"/>
                            <field name="iptal_gonderim_tarihi"/>
                            <field name="iptal_yanit_tarihi"/>
                        </group>
                    </group>
                    <group>
                        <group string="Diğer Bilgiler">
                            <field name="request_type"/>
                            <field name="aciklama"/>
                        </group>
                        <group string="Sistem Bilgileri">
                            <field name="create_date"/>
                            <field name="write_date"/>
                            <field name="create_uid"/>
                            <field name="write_uid"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Terminal Search View -->
    <record id="view_terminal_search" model="ir.ui.view">
        <field name="name">terminal.management.search</field>
        <field name="model">terminal.management</field>
        <field name="arch" type="xml">
            <search string="Terminal Ara">
                <field name="mali_no"/>
                <field name="banka_adi"/>
                <field name="org_id"/>
                <field name="marka"/>
                <field name="model"/>
                <field name="imei"/>
                <separator/>
                <filter string="Aktif Terminaller" name="aktif" domain="[('terminal_durum', '=', 'aktif')]"/>
                <filter string="Pasif Terminaller" name="pasif" domain="[('terminal_durum', '=', 'pasif')]"/>
                <filter string="Arızalı Terminaller" name="ariza" domain="[('terminal_durum', '=', 'ariza')]"/>
                <filter string="Bekleyen Terminaller" name="beklemede" domain="[('terminal_durum', '=', 'beklemede')]"/>
                <separator/>
                <filter string="Bugün Oluşturulan" name="bugun" domain="[('create_date', '>=', datetime.datetime.combine(context_today(), datetime.time(0,0,0)))]"/>
                <group expand="0" string="Grupla">
                    <filter string="Terminal Durumu" name="group_terminal_durum" context="{'group_by': 'terminal_durum'}"/>
                    <filter string="Banka Durumu" name="group_banka_durum" context="{'group_by': 'banka_durum'}"/>
                    <filter string="POS Durumu" name="group_pos_durum" context="{'group_by': 'pos_durum'}"/>
                    <filter string="Marka" name="group_marka" context="{'group_by': 'marka'}"/>
                    <filter string="Banka Adı" name="group_banka_adi" context="{'group_by': 'banka_adi'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Terminal Action -->
    <record id="action_terminal_management" model="ir.actions.act_window">
        <field name="name">Terminal Yönetimi</field>
        <field name="res_model">terminal.management</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_aktif': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                İlk terminali oluşturun!
            </p>
            <p>
                Terminal yönetim sisteminde yeni terminal kaydı ekleyebilir,
                mevcut kayıtları düzenleyebilir ve takip edebilirsiniz.
            </p>
        </field>
    </record>
</odoo>
